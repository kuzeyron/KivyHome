#:import Applications libs.icons.AppContainer
#:import DesktopApplications libs.icons.DesktopApplications
#:import Desktop libs.desktop.Desktop

<KivyHome>:
    padding: 0, self.status_bar_height, 0, 0
    canvas.before:
        Color:
            rgba: self.color
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: 1, 1, 1, 1 if self._texture is not None else 0
        Rectangle:
            texture: self._texture
            size: self._scaled_size
            pos: self._scaled_pos

    ScreenManager:
        id: kivyhome_manager
        Screen:
            name: 'main'
            BoxLayout:
                orientation: 'vertical'
                padding: 0, 0, 0, root.navigation_bar_height + dp(5)
                spacing: dp(25)
                Desktop:
                    id: desk
                    DesktopApplications:
                        id: desktop_applications
                    Label:
                        text: 'Almost empty'
                StackLayout:
                    pos_hint: {'center_x': .5}
                    size_hint: .95, None
                    height: self.minimum_height
                    padding: dp(10), 0, dp(10), dp(10)
                    spacing: dp(10), 0
                    id: desktop_favorites
                    canvas.before:
                        Color:
                            rgba: .5 ,.5 ,.5, .5
                        RoundedRectangle:
                            radius: (dp(15), )
                            size: self.size
                            pos: self.pos

        Screen:
            name: 'all_apps'
            AppContainer:
