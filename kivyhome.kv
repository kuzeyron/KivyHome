#:import Applications libs.icons.AppContainer
#:import Controllers libs.controllers.Controllers
#:import DesktopApplications libs.icons.DesktopApplications
#:import Media libs.media.Media
#:import Desktop libs.desktopstack.Desktop

<Basement>:
    padding: 0, app.statbar_height, 0, 0
    spacing: dp(2)
    orientation: 'vertical'
    canvas.before:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            texture: app.bg
            size: self.size
            pos: self.pos

    ScreenManager:
        id: sm

        Screen:
            name: 'main'
            BoxLayout:
                orientation: 'vertical'
                padding: 0, 0, 0, app.navbar_height + dp(5)
                spacing: dp(25)
                Desktop:
                    id: desk
                    DesktopApplications:
                        id: desk_apps
                    Media:
                    Label:
                        text: 'Almost empty'
                StackLayout:
                    pos_hint: {'center_x': .5}
                    size_hint: .95, None
                    height: self.minimum_height
                    padding: dp(10), 0, dp(10), dp(10)
                    id: desk_favs
                    canvas.before:
                        Color:
                            rgba: .5 ,.5 ,.5, .5
                        RoundedRectangle:
                            radius: [dp(15), ]
                            size: self.size
                            pos: self.pos
                
        Screen:
            name: 'all_apps'
            AppContainer:

